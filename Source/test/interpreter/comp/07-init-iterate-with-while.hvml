#!/usr/bin/purc

# RESULT: [0L, 2L, 4L, 6L, 8L ]

<!DOCTYPE hvml>
<hvml target="void">
    <init as "evenNumbers" with [0L] >
        <iterate with $DATA.arith('+', $evenNumbers[-1], 2) while $L.lt($0?, 8L) >
            <update on $evenNumbers to "append" with $? />
        </iterate>
    </init>

    <exit with $evenNumbers />
</hvml>

