<!DOCTYPE hvml>
<hvml target="html" lang="en">
    <head>
    </head>

    <body>
        <div>
            <clear>
                <catch for=`ArgumentMissed`>
                    <update on="$@" at="attr.argumentmissed" to="displace" with="matched" />
                </catch>
            </clear>
        </div>
        <catch for=`InvalidValue`>
            <update on="$@" at="attr.invalid_value" to="displace" with="matched" />
        </catch>
    </body>
</hvml>

