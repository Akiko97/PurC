    ArgumentMissed

negative:
    $PY.import(null)
    WrongDataType

negative:
    $PY.import(' ')
    InvalidValue

negative:
    $PY.import('asfd&* ')
    InvalidValue

negative:
    $PY.import('import')
    Conflict

positive:
    $PY.import('math')
    true

positive:
    $PY.math
    pyObject::module

positive:
    $PY.math.pow(2, 3)
    8

negative:
    $PY.math.pow(! { x: 3, y: 3 } )
