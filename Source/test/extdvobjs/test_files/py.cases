    3.1415926535897931

positive:
    $PY.import('datetime', ['datetime:dt', 'timedelta:td'])
    true

positive:
    $PY.dt
    pyObject::callable

positive:
    $PY.td
    pyObject::callable

# $PY.stringify
positive:
